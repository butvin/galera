{% extends 'base.html.twig' %}

{% block title %}Index{% endblock %}

{% block header %}
    <section class="mx-auto px-12 bg-gradient-to-r from-pink-500 via-red-500 to-yellow-400">
        <h1 class="leading-1 text-2xl font-bold leading-7 text-gray-50 sm:text-3xl sm:truncate text1">HEADER SECTION</h1>
        <section class="container mx-auto px-12">
            <div class="plate">
                <p class="script"><span>Symfony 5.3</span></p>
                <p class="shadow text1">RabbitMQ</p>
                <p class="shadow text2">PHP&nbsp;8</p>
                <p class="shadow text3">REDIS</p>
                <p class="script"><span>on&nbsp;Nginx&nbsp;1.21.3</span></p>
            </div>
        </section>
        <div class="mt-2 items-center">
            <div class="flex text-sm text-gray-50 w-1/6">
                <span>{{ date('now')|date }}</span>
            </div>
        </div>
    </section>
{% endblock %}

{% block body %}
    <section class=" container mx-auto px-12 bg-gray-600 text-gray-50">
        <h1 class="pt-8 leading-1 text-2xl font-bold leading-7 text-gray-50 sm:text-3xl sm:truncate">
            <span class="bg-galera">MAIN SECTION</span>
        </h1>
        <h2 class="text-xl font-bold leading-7 text-gray-50 sm:text-3xl sm:truncate">
            <span class="">{{ data.index }}</span>
        </h2>
        <h3 class="text-2xl">Request:</h3>
        <hr>
        <div class="w-1 py-4">
            <pre>
                {{ data.request }}
            </pre>
        </div>
        <div class="py-4">
            <table class="table-auto border-collapse border border-grey-900">
                <thead >
                    <tr>
                        <th class="border border-grey-500">1</th>
                        <th class="border border-grey-500">2</th>
                        <th class="border border-grey-500">3</th>
                    </tr>
                </thead>
                <tbody>
                    <tr class="bg-emerald-200">
                        <td class="border border-grey-500">A Long and Winding Tour of the History of UI Frameworks and Tools and the Impact on Design</td>
                        <td class="border border-grey-500">Umberto</td>
                        <td class="border border-grey-500">112</td>
                    </tr>
                    <tr>
                        <td class="border border-grey-500">Intro to JavaScript</td>
                        <td class="border border-grey-500">Вениамин Афанасьевич</td>
                        <td class="border border-grey-500">1,280</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </section>
{% endblock %}

{% block footer %}
<section class="mx-auto px-12 yellow-mango">
    <div class="lg:flex lg:items-center lg:justify-between">
        <div class="flex-1 min-w-0">
            <h1 class="leading-1 text-2xl font-bold leading-7 text-gray-50 sm:text-3xl sm:truncate text1">FOOTER SECTION</h1>
            <div class="mt-1 flex flex-col sm:flex-row sm:flex-wrap sm:mt-0 sm:space-x-6">
                <div class="mt-2 flex items-center text-sm text-gray-100">
                    Option text 1
                </div>
                <div class="mt-2 flex items-center text-sm text-gray-200">
                    Option text 2
                </div>
                <div class="mt-2 flex items-center text-sm text-gray-300">
                    Option text 3
                </div>
                <div class="mt-2 flex items-center text-sm text-gray-400">
                    Option text 4
                </div>
            </div>
        </div>
        <div class="mt-5 flex lg:mt-0 lg:ml-4">
            <span class="hidden sm:block">
                <button type="button" class="inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                    Btn 1
                </button>
            </span>
            <span class="hidden sm:block ml-3">
                <button type="button" class="inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                    Btn 2
                </button>
            </span>
            <span class="sm:ml-3">
                <button type="button" class="inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                    Btn 3
                </button>
            </span>
            <span class="ml-3 relative sm:hidden">
                <button type="button" class="inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" id="mobile-menu-button" aria-expanded="false" aria-haspopup="true">
                    Btn 4
                </button>
                <span class="origin-top-right absolute right-0 mt-2 -mr-1 w-48 rounded-md shadow-lg py-1 bg-white ring-1 ring-black ring-opacity-5 focus:outline-none" role="menu" aria-orientation="vertical" aria-labelledby="mobile-menu-button" tabindex="-1">
                    <a href="#" class="block px-4 py-2 text-sm text-gray-700" role="menuitem" tabindex="-1" id="mobile-menu-item-0">Edit</a>
                    <a href="#" class="block px-4 py-2 text-sm text-gray-700" role="menuitem" tabindex="-1" id="mobile-menu-item-1">View</a>
                </span>
            </span>
        </div>
    </div>
    <div class="float-right inline">
        <div class="col-span-1 text-sm uppercase text-gray-50 bg-gray-900 p-0 m-0 font-mono font-light">
            <span>butvin sergey</span>
        </div>
    </div>
</section>
{% endblock %}
